doctype html
html(lang='en')
    head    
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title Twitter Search
        meta(name='title', content='')
        meta(name='description', content='')
        meta(name='author', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href="css/main.css")
      body
        main(role='main')
            nav.navbar.navbar-default
                .container-fluid
                    .navbar-header
                        a(href='').navbar-brand 
                            span
                                i.fa.fa-twitter.text-primary
                                |  Twitter Search
                    .collapse.navbar-collapse 
                        p.navbar-text.navbar-right
                            small.text-muted="Version: " + version 
                            
            .container
                .row
                    form(id='search', autocomplete="off")
                        .form-group.col-sm-12
                            label Search
                            input(type='search', name='q',placeholder='Search', required).form-control
                        .form-group.col-sm-6
                            label Since
                            input(type='date', name='since').form-control
                        .form-group.col-sm-6
                            label Language
                            input(type="text", name="lang").form-control
                        .form-group.col-sm-12
                            button(type='submit',data-loading-text='<i class="fa fa-refresh fa-spin"></i> Searching ...', data-html="true").btn.btn-primary 
                                i.fa.fa-search
                                |  Search

                hr
                .row
                    div(id='count')

            footer.footer
                .container
                    .row
                        ul 
                            li
                                a(href="https://twitter.com/@jbsouvestre")
                                    i.fa.fa-twitter
                            li
                                a(href="https://github.com/jbsouvestre/h2")
                                    i.fa.fa-github

                                          
        script(src="bower_components/jquery/dist/jquery.js")
        script(src="bower_components/bootstrap/dist/js/bootstrap.js")
        script(src="bower_components/bootstrap3-typeahead/bootstrap3-typeahead.min.js")
        script(src="js/app.js")
